            a(href='assets/img/houses/3-bedroom.jpg' data-lightbox='house2')
              img.img-fluid.w-100(data-toggle="lightbox"  src='assets/img/houses/3-bedroom.jpg')
        .row.mx-auto
          h2.text-center.mx-auto.py-2.mb-3 Plans
          .card.card-body.w-100
            a(href='assets/img/plans/3-bedroom-plan.jpg' data-lightbox='house2')
              img.img-fluid.w-100(data-toggle="lightbox" src='assets/img/plans/3-bedroom-plan.jpg')
