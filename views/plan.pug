              img.img-fluid.w-100(data-toggle="lightbox" src='assets/img/plans/3-bedroom-plan-2.jpg')
        .row.mx-auto.mt-3.pricingTable.px-3.pb-3.align-items-center.gradient-bg-green
          .col-md-6
            h2.p-3.m-0.text-light Three Bedroom Home
            h3.m-0.text-light Cost: $234,359
            h4.text-light 5% Deposit: $11,717
            h4.text-light 1265 square feet
          .col-md-6
            a.btn.btn-secondary.text-dark.btn-lg(href='/contact') Contact Us


      #house3.multi-collapse.collapse.mx-auto.features-clean(style='padding-bottom:30px;')
        .row.mx-auto
          h2.text-center.mx-auto.py-2.mb-3 Pictures
          .card.card-body.w-100
            a(href='assets/img/houses/3-bedroom.jpg' data-lightbox='house3')
              img.img-fluid.w-100(data-toggle="lightbox"  src='assets/img/houses/3-bedroom.jpg')
        .row.mx-auto
          h2.text-center.mx-auto.py-2.mb-3 Plans
          .card.card-body.w-100
            a(href='assets/img/plans/4-bedroom-plan.jpg' data-lightbox='house3')
